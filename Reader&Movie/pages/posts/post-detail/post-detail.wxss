.container{
    display:flex;
    flex-direction:column;
}

.head-image{
    width:100%;
    height:460rpx;
}

.audio{
    width:102rpx;
    height: 110rpx;
    position: absolute;/*绝对定位，脱离文档流*/
    /*设置垂直水平居中的经典方式*/
    left:50%;
    margin-left: -51rpx;

    top:180rpx;
    opacity:0.6;/*透明度*/
}

.author-date{
    flex-direction: row;
    margin-left:30rpx;
    margin-top: 20rpx;
}

.avatar{
    height:64rpx;
    width:60rpx;
    vertical-align: middle;
}

.author{
    font-size:30rpx;
    font-weight:300;
    margin-left:20rpx;
    vertical-align: middle;
    color:#666;
}

.const-text{
    font-size:24rpx;
    color:#999;
    margin-left:20rpx;
}

.date{
    font-size:24rpx;
    margin-ledt:24rpx;
    vertical-align: middle;
    color:#999;
}

.title{
    margin-left: 40rpx;
    font-size: 36rpx;
    font-weight:700;
    margin-top: 30rpx;
    letter-spacing: 2px;
    color:#4b556c; 
}

.tool{
    margin-top: 20rpx;
}

.circle-img{
    float: right;
    margin-right:40rpx;
    vertical-align: middle;
}

.circle-img Image{/*circle-image下面所有的image子元素样式*/
    width:90rpx;
    height:90rpx;
}

.share-img{
    margin-left: 30rpx;
}

.horizon{
    width:660rpx;
    height: 2px;/*无需用rpx来自适应，只是想让线固定不变*/
    background-color: #e5e5e5;
    vertical-align: middle;
    position:relative;/*脱离文档流,设置重叠*/
    top:46rpx;
    margin:0 auto;
    z-index:-99;/*设置元素堆叠顺序*/
}

.detail{
    color:#666;
    margin-left: 30rpx;
    margin-top: 20rpx;
    margin-right: 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
}